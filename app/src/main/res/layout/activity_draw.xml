<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draw_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".Activities.DrawActivity">

    <!-- Linke, fixierte vertikale Toolbar -->
    <LinearLayout
        android:id="@+id/left_toolbar"
        android:layout_width="88dp"
        android:layout_height="0dp"
        android:background="?attr/colorSurface"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ToolButton"
        app:layout_constraintStart_toStartOf="@+id/ToolButton"
        app:layout_constraintTop_toBottomOf="@+id/ToolButton">

        <!-- NEUER BUTTON ZUM ÖFFNEN DER SIDEBAR -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sidebar"
            style="@style/Theme.DrawNow.CustomMaterialButton"
            app:backgroundTint="?attr/colorSurface"
            app:icon="@drawable/delete_icon"
            app:iconSize="24dp"
            app:iconTint="?attr/colorOnSurface" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/openShortcutButton"
            style="@style/Theme.DrawNow.CustomMaterialButton"
            app:backgroundTint="?attr/colorSurface"
            app:icon="@drawable/addcommand_icon"
            app:iconSize="24dp"
            app:iconTint="?attr/colorOnSurface" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/undoButton"
            style="@style/Theme.DrawNow.CustomMaterialButton"
            app:backgroundTint="?attr/colorSurface"
            app:icon="@drawable/undo_icon"
            app:iconSize="24dp"
            app:iconTint="?attr/colorOnSurface" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/redoButton"
            style="@style/Theme.DrawNow.CustomMaterialButton"
            app:backgroundTint="?attr/colorSurface"
            app:icon="@drawable/redo_icon"
            app:iconSize="24dp"
            app:iconTint="?attr/colorOnSurface" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pinchModeButton"
            style="@style/Theme.DrawNow.CustomMaterialButton"
            app:backgroundTint="?attr/colorSurface"
            app:icon="@drawable/pinch_icon"
            app:iconSize="24dp"
            app:iconTint="?attr/colorOnSurface" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/showCursorButton"
            style="@style/Theme.DrawNow.CustomMaterialButton"
            app:backgroundTint="?attr/colorSurface"
            app:icon="@drawable/cursor"
            app:iconSize="24dp"
            app:iconTint="?attr/colorOnSurface" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingsButton"
            style="@style/Theme.DrawNow.CustomMaterialButton"
            android:layout_marginBottom="10dp"
            app:backgroundTint="?attr/colorSurface"
            app:icon="@drawable/settings_icon"
            app:iconSize="24dp"
            app:iconTint="?attr/colorOnSurface" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- RECHTE SIDEBAR (Standardmäßig unsichtbar) -->

    <!-- Deine vorhandenen Cursors etc. -->
    <ImageView
        android:id="@+id/cursor_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:visibility="invisible"
        app:srcCompat="@drawable/cursor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/pinchCursor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:visibility="invisible"
        app:srcCompat="@drawable/pinch_cursor_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/pinchCursor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:visibility="invisible"
        app:srcCompat="@drawable/pinch_cursor_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ToolButton"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:backgroundTint="?attr/colorSurface"
        app:icon="@drawable/tool_icon"
        app:iconSize="24dp"
        app:iconTint="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>